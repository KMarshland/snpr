<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<br />

<%= link_to 'New Document', new_document_path, class: 'btn btn-default btn-lg' %>

<br />
<br />

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>External ID</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.external_id %></td>
        <td><%= document.source %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
